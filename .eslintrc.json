{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "brace-style": [
            "error",
            "allman"
        ],
        "indent": [
            "error",
            4
        ],
        "eol-last": [
            "error",
            "always"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "unicode-bom": [
            "error",
            "never"
        ],
        "@typescript-eslint/brace-style": "error"
    }
}